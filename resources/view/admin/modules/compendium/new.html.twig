<div class="app-content content ">
	<div class="content-overlay"></div>
	<div class="header-navbar-shadow"></div>
	<div class="content-wrapper">
		<div class="content-header row">
			<div class="content-header-left col-md-9 col-12 mb-1">
				<div class="row breadcrumbs-top">
					<div class="col-12">
						<h2 class="content-header-title float-start mb-0" data-i18n="Compendium">Compendium</h2>
						<div class="breadcrumb-wrapper">
							<ol class="breadcrumb">
								<li class="breadcrumb-item">
									<a href="{{ URL }}/admin/home" data-i18n="Home">Home</a>
								</li>
								<li class="breadcrumb-item active" data-i18n="Compendium">Compendium</li>
                                <li class="breadcrumb-item active" data-i18n="New">New</li>
							</ol>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-12 col-md-12 col-lg-12 col-sm-12">
				{{ status|raw }}
			</div>
			<div class="col-12 col-md-12 col-lg-12 col-sm-12">
				<div class="card mb-1">
					<div class="card-body">
						<div class="border-bottom mb-1">
							<h4 class="card-title" data-i18n="Publish News">Publish News</h4>
						</div>
						<form action="{{URL}}/admin/compendium/new" method="post" class="form form-vertical">
							<div class="row">
								<div class="col-md-12 col-lg-6">
									<label class="form-label" for="compendium_headline" data-i18n="Title">Title</label>
									<input type="text" name="compendium_headline" id="compendium_headline" class="form-control mb-1">
								</div>
								<div class="col-md-12 col-lg-6">
									<label class="form-label" for="compendium_category" data-i18n="Category">Category</label>
									<select name="compendium_category" class="form-select">
										<option value="4">USEFUL INFO</option>
										<option value="5">SUPPORT</option>
										<option value="13">CLIENT FEATURES</option>
										<option value="17">GAME CONTENTS</option>
										<option value="21">MAJOR UPDATES</option>
									</select>
								</div>
								<div class="col-md-12 col-lg-12">
									<label class="form-label" for="compendium_message" data-i18n="Message">Message</label>
									<textarea name="compendium_message" id="compendium_message" class="form-control" rows="10"></textarea>
								</div>
								<div class="col-md-12 col-lg-12 mt-1">
									<input type="submit" class="btn btn-primary" data-i18n="Publish" value="Publish">
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div></div>
<script>
CKEDITOR.replace('compendium_message', {
	height: 400,
	baseFloatZIndex: 10005,
	removeButtons: 'PasteFromWord'
});
</script>